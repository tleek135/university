#ifndef Instructor_h
#define Instructor_h

#include "Person.h"
#include <string>

using namespace std;

//Represents an instructor with a salary, 
//and includes basic information from Person class
class Instructor: public Person 
{
public:
	Instructor();
	Instructor(string n, string d, string g, int s);
	virtual void print();
protected:
    int salary;
};

#endif // Instructor_h
